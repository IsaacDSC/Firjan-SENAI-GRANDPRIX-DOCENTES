<div class="login-box">
    <div class="login-logo">
        <i class="fas fa-gamepad"></i>
        <a href="http://solutionstech.com.br/"><b></b>
            <h1 class="text-center">
                <strong>
                    GAMER OF SPI
                </strong>
            </h1>
        </a>
    </div>
    <!-- /.login-logo -->

    <div class="card">
        <div class="card-body login-card-body" style="background-color: rgba(52, 5, 95, 0.87); color: white;">
            <p class="login-box-msg text-light">Adquira Experiência e Diversão!</p>
            {{>_msg}}
            <form action="/account/login" method="POST">
                <div class="input-group mb-3">
                    <input type="text" name="username" class="form-control" placeholder="Digite seu e-mail">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input type="password" name="password" class="form-control" placeholder="Digite sua senha">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <input type="checkbox" id="remember">
                            <label for="remember text-light" style="color: white;">
                                Lembrar-me
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-4">
                        <button class="btn btn-info btn-block">Entrar</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

